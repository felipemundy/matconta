<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password, "Senha" %>
      <%= f.password_field :password %>

      <p><a href="#">Esqueceu sua senha?</a></p>

      <%= f.submit "Entrar", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>Ainda n√£o fez o seu <%= link_to "Cadastro", cadastro_path %>?</p>
  </div>
</div>